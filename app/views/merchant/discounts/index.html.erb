<h1>All Discounts</h1>

<%= link_to 'New Discount', new_merchant_discount_path %>

<% @discounts.each do |discount| %>
  <section id='discount-<%= discount.id%>'>
    <h2><%= link_to discount.name, merchant_discount_path(discount) %></h2>
    <p>Enabled? <%= discount.enabled %></p>
  </section>
<% end %>